
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // <--- เปลี่ยนตรงนี้
  url      = env("DATABASE_URL")
}

// ตัวอย่างตาราง User (เดี๋ยวเรามาออกแบบจริงจังกันอีกที)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  role      String   @default("staff")
  createdAt DateTime @default(now())
}